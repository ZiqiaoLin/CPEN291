<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.linziqiao.g5.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:backgroundTint="?android:attr/textColorSecondaryInverseNoDisable"
>

    <ImageView
        android:layout_width="407dp"
        android:layout_height="209dp"
        app:srcCompat="@drawable/front_page"
        android:id="@+id/imageView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="32dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="116dp"
        android:layout_width="368dp"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        android:id="@+id/linearLayout"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:background="#FFFFFF"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="Jarvis"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:text="Jarvis is a voice control system that developed by group 5.We meet a lot of problem in process.Right now is the still have a lot of problem"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
